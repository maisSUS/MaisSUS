<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCfmUnidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Unidade:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUnidadeNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UBS Feu Rosa" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCfmEspecialidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Exame:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEspecialidadeNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pré-Natal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCfmData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Data:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDataNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19/11/2024" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCfmHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Horário:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHorarioNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:30" />
    </LinearLayout>

</LinearLayout>