<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MaisSUS" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="android:spinnerStyle">@style/CustomSpinnerStyle</item>
        <item name="android:buttonStyle">@style/ButtonStlyeGreen</item>
    </style>

    <style name="CustomTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.MaisSUS" parent="Base.Theme.MaisSUS" />

    <style name="ButtonStlyeRed" parent="android:style/Widget.Button">
        <item name="android:textSize">19dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:radius">10dp</item>
        <item name="android:background">@drawable/bg_button_red</item>
    </style>

    <style name="ButtonStlyeGreen" parent="android:style/Widget.Button">
        <item name="android:textSize">19dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:radius">10dp</item>
        <item name="android:background">@drawable/bg_button_green</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/white</item> <!-- Background color -->
        <item name="android:dropDownVerticalOffset">10dp</item> <!-- Vertical offset for dropdown -->
        <item name="android:dropDownWidth">match_parent</item> <!-- Dropdown width -->
        <item name="android:padding">10dp</item> <!-- Padding for spinner -->
        <item name="android:backgroundTint">@color/verde_spinner</item> <!-- Spinner background tint -->
    </style>
</resources>